<div>
<h4>{{workflow}} - {{activity}}</h4>
<table class="table discussion-list">
    <thead>
        <tr>
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Request</a>
            </th>
            {{#general}}
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Activity</a>
            </th>
            {{/general}}
            {{#activityrelated}}
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Type</a>
            </th>
            {{/activityrelated}}
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Student</a>
            </th>
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Individual/Batch</a>
            </th>
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Status</a>
            </th>
            <th scope="col" class="p-l-0">
                <a href="" aria-label="">Time Created</a>
            </th>
        </tr>
    </thead>
    <tbody>
        {{#requests}}
            <tr>
                <th scope="row" class="topic p-0 align-middle">
                    <div class="p-3 p-l-0">
                        <a class="w-100 h-100 d-block" href="{{url}}{{id}}&cmid={{cmid}}" title="Request 1" aria-label="Request 1">
                           {{request}}
                        </a>
                    </div>
                </th>
                {{#workflowtype=general}}
                <td class="p-0 align-middle fit-content">
                {{activity}}
                </td>
                {{/workflowtype=general}}
                {{#workflowtype=activity-related}}
                <td class="p-0 align-middle fit-content">
                {{type}}
                </td>
                {{/workflowtype=activity-related}}
                <td class="p-0 align-middle fit-content">
                    {{student}}
                </td>
                <td class="p-0 align-middle fit-content">
                    {{#isbatchrequest}}
                        Batch
                    {{/isbatchrequest}}
                    {{^isbatchrequest}}
                        Individual
                    {{/isbatchrequest}}
                </td>
                <td class="p-0 align-middle fit-content">
                    {{status}}
                </td>
                <td class="p-0 align-middle fit-content">
                    {{timecreated}}
                </td>
            </tr>
        {{/requests}}
    </tbody>
</table>
</div>
